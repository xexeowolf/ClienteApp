<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pagina_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andresgarher.androiddrawer.MainActivity1"
    android:background="@drawable/otracomida">


    <Button
        android:text="Ir a Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/BotonAvanzarMenu"
        android:visibility="visible"/>

    <TextView
        android:text="Categoria de Cliente: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoCategoria"
        android:layout_above="@+id/spinner3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/BotonScaneo"
        android:layout_alignEnd="@+id/BotonScaneo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/NumeroMesa"
        android:clickable="false"
        tools:inputType="none"
        android:editable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_above="@+id/BotonAvanzarMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Numero De Mesa: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EtiquetaNumeroMesa"
        android:layout_above="@+id/NumeroMesa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_above="@+id/EtiquetaNumeroMesa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:layout_toLeftOf="@+id/BotonScaneo"
        android:layout_toStartOf="@+id/BotonScaneo" />

    <Button
        android:text="SCAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BotonScaneo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oprimir boton para escaner el numero de mesa"
        android:id="@+id/TituloScan"
        tools:textAlignment="center"
        android:layout_above="@+id/BotonScaneo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
